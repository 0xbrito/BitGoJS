{
  "name": "root",
  "private": true,
  "devDependencies": {
    "lerna": "^3.13.4"
  },
  "workspaces": [
    "modules/*"
  ],
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "generate-drone": "drone jsonnet --stream",
    "audit": "lerna run audit --since --stream",
    "lint": "lerna run lint --since --stream",
    "unit-test": "lerna run unit-test --since --stream",
    "integration-test": "lerna run integration-test --since --stream",
    "report": "lerna exec gen-coverage --since --stream",
    "coverage": "lerna exec upload-coverage --since --stream"
  }
}
