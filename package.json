{
  "name": "root",
  "private": true,
  "devDependencies": {
    "lerna": "^3.13.4"
  },
  "workspaces": [
    "modules/*"
  ],
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "generate-drone": "drone jsonnet --stream",
    "audit": "lerna run audit --since ${DRONE_TARGET_BRANCH:-master}^..${DRONE_COMMIT:-HEAD} --stream",
    "lint": "lerna run lint --since ${DRONE_TARGET_BRANCH:-master}^..${DRONE_COMMIT:-HEAD} --stream",
    "unit-test": "lerna run unit-test --since ${DRONE_TARGET_BRANCH:-master}^..${DRONE_COMMIT:-HEAD} --stream",
    "integration-test": "lerna run integration-test --since ${DRONE_TARGET_BRANCH:-master}^..${DRONE_COMMIT:-HEAD} --stream",
    "gen-coverage": "lerna run gen-coverage --since ${DRONE_TARGET_BRANCH:-master}^..${DRONE_COMMIT:-HEAD} --stream",
    "coverage": "lerna run upload-coverage --since ${DRONE_TARGET_BRANCH:-master}^..${DRONE_COMMIT:-HEAD} --stream --"
  }
}
