{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": ".",
    "typeRoots": [
      "./types",
      "../../types",
      "./node_modules/@types",
      "../../node_modules/@types"
    ]
  },
  "include": [
    "src/**/*",
    "package.json"
  ],
  "typedocOptions": {
    "mode": "modules",
    "out": "docs",
    "title": "BitGo SDK Documentation",
    "theme": "minimal",
    "excludeNotExported": true,
    "excludePrivate": true,
    "excludeProtected": true,
    "ignoreCompilerErrors": true
  }
}
