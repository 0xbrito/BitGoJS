{
  "name": "@bitgo/utxo-bin",
  "description": "Command-line utility for BitGo UTXO transactions",
  "version": "2.0.0-rc.3",
  "files": [
    "dist/**/*"
  ],
  "keywords": [
    "bitgo",
    "utxo",
    "bitcoinjs",
    "bitcoin"
  ],
  "scripts": {
    "prepare": "npm run build",
    "build": "yarn tsc --build --incremental --verbose .",
    "lint": "eslint --quiet .",
    "unit-test": "mocha",
    "fmt": "prettier --write '{bin,src,test}/**/*.{ts,js}'",
    "precommit": "yarn lint-staged"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/BitGo/BitGoJS.git",
    "directory": "modules/utxo-bin"
  },
  "bin": "./dist/bin/index.js",
  "dependencies": {
    "@bitgo/blockapis": "^1.0.1-rc.17",
    "@bitgo/statics": "^7.0.0-rc.4",
    "@bitgo/utxo-lib": "^2.3.0-rc.11",
    "archy": "^1.0.0",
    "chalk": "4",
    "yargs": "^17.3.1"
  },
  "devDependencies": {
    "@types/archy": "^0.0.32",
    "@types/yargs": "^17.0.8"
  },
  "lint-staged": {
    "*.{js,ts}": [
      "yarn prettier --write",
      "yarn eslint --fix"
    ]
  },
  "publishConfig": {
    "access": "public"
  },
  "license": "MIT"
}
