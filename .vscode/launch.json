{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "env": {
                "TS_NODE_PROJECT": "${workspaceFolder}/modules/core/tsconfig.json"
            },
            "args": [
                "--require",
                "${workspaceFolder}/node_modules/ts-node/register",
                //"${workspaceFolder}/modules/core/test/v2/unit/recovery/utxo.ts"
                "${workspaceFolder}/modules/core/test/v2/unit/coins/btc.ts"
            ],
            "internalConsoleOptions": "openOnSessionStart",
            "name": "Core Mocha Tests",
            "program": "${workspaceFolder}/modules/core/node_modules/.bin/mocha",
            "request": "launch",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "type": "pwa-node"
        },
        {
            "type": "pwa-node",
            "request": "launch",
            "name": "Launch Program",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/modules/utxo-lib/node_modules/bitcoinjs-lib/src/address.js",
            "outFiles": [
                "${workspaceFolder}/**/*.js"
            ]
        }
    ]
}

